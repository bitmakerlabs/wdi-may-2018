<!DOCTYPE html>
<html>
  <head>
    <title>Rainforest</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if current_user %>
      <p>
        Hello <%= current_user.email %>, your balance is $<%= current_user.balance %>
        |
        <%= link_to 'Logout', sessions_path, method: :delete %>
      </p>
    <% else %>
    <p>
      <%= link_to 'New Account', new_users_path %>
      |
      <%= link_to 'Log In', new_sessions_path %>
    </p>
    <% end %>

    <%= yield %>
  </body>
</html>
