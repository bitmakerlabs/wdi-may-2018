
<h1>TEAMS PAGE</h1>

<% @teams.each do |team| %>
  <p>
    <%= team.country %> is in group <%= team.group %>
  </p>
<% end %>

<hr>


<form class="" action="/teams" method="post">
  <p>
    <label>
      Country name
      <input type="text" name="country" value="">
    </label>
  </p>

  <p>
    <label>
      Group
      <input type="text" name="group" value="">
    </label>
  </p>

  <p>
    <input type="submit" name="" value="Add team!">
  </p>

</form>



<hr>



<%= form_tag '/teams', method: :post do %>

  <p>
    <%= label_tag :country %>
    <%= text_field_tag :country %>
  </p>

  <p>
    <%= label_tag :group %>
    <%= text_field_tag :group %>
  </p>

  <p>
    <%= submit_tag('Add team!') %>
  </p>

<% end %>

<%= render 'form', given_team: @team %>









<hr>
